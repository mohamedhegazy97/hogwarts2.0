<%= form_with(model: @spell, local: true) do |f| %>
<%= render 'shared/error_messages', object: f.object %>
<div class="field">
<%= f.label :short_name %>
<%= f.text_field :short_name, class: 'form-control' %>
<%= f.text_area :description, placeholder: "describe new spell..." %>
</div>
<%= f.submit "Post", class: "btn btn-primary" %>
<% end %>